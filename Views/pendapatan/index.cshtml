@model DompetKU.Models.Transaction
@{
    ViewData["Title"] = "Pendapatan";
    var transactions = ViewBag.Transactions as IEnumerable<Transaction>;
}

<div class="bg-white p-4 rounded shadow-md mb-6">
    <h3 class="font-semibold text-lg mb-4">Tambah Pendapatan</h3>
    <form asp-action="Create" method="post" class="space-y-4">
        <div>
            <label asp-for="Date" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Date" type="date" class="w-full px-4 py-2 border border-gray-300 rounded-md">
            <span asp-validation-for="Date" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Category" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Category" class="w-full px-4 py-2 border border-gray-300 rounded-md" placeholder="Contoh: Gaji">
            <span asp-validation-for="Category" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Amount" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Amount" type="number" class="w-full px-4 py-2 border border-gray-300 rounded-md" placeholder="Rp">
            <span asp-validation-for="Amount" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Description" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Description" class="w-full px-4 py-2 border border-gray-300 rounded-md" placeholder="Keterangan">
            <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
        </div>

        <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700">
            Tambah Pendapatan
        </button>
    </form>
</div>

<h2 class="text-2xl font-bold mb-4">Daftar Pendapatan</h2>
<partial name="_TransactionTable" model="transactions" />