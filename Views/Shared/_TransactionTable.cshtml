@using System.Globalization <!-- Tambahkan ini di bagian atas -->
@model IEnumerable<Transaction>

@if(Model != null && Model.Any())
{
    <table class="w-full table-auto bg-white rounded shadow-md">
        <thead class="bg-blue-600 text-white">
            <tr>
                <th class="p-2">Tanggal</th>
                <th class="p-2">Kategori</th>
                <th class="p-2">Jumlah</th>
                <th class="p-2">Keterangan</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr class="text-center border-t">
                    <td class="p-2">@item.Date.ToString("dd/MM/yyyy")</td>
                    <td class="p-2">@item.Category</td>
                    <td class="p-2 @(item.Type == "Income" ? "text-green-600" : "text-red-600")">
                        @item.Amount.ToString("C", CultureInfo.CreateSpecificCulture("id-ID"))
                    </td>
                    <td class="p-2">@item.Description</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-gray-500">Belum ada data</p>
}