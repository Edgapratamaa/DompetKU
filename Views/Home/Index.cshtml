@model IEnumerable<Transaction>
@{
    ViewData["Title"] = "Beranda";
}

<section class="bg-blue-600 text-white p-6 rounded-md">
    <h1 class="text-3xl font-bold">Selamat Datang di DompetKU</h1>
    <p class="mt-2">Kelola keuangan Anda dengan mudah, cepat, dan efisien</p>
    <div class="mt-4 flex flex-wrap gap-4">
        <a asp-controller="Pengeluaran" asp-action="Index" class="bg-white text-blue-600 font-semibold px-4 py-2 rounded hover:bg-blue-100 transition">Tambah Pengeluaran</a>
        <a asp-controller="Pendapatan" asp-action="Index" class="bg-white text-blue-600 font-semibold px-4 py-2 rounded hover:bg-blue-100 transition">Tambah Pendapatan</a>
        <a asp-controller="Laporan" asp-action="Index" class="bg-white text-blue-600 font-semibold px-4 py-2 rounded hover:bg-blue-100 transition">Lihat Laporan</a>
    </div>
</section>

<section class="mt-8 grid grid-cols-1 sm:grid-cols-3 gap-4">
    <div class="bg-white p-4 rounded shadow">
        <h3 class="text-lg font-semibold text-gray-700 mb-2">Total Pendapatan</h3>
        <p class="text-green-600 text-xl font-bold">@ViewBag.TotalIncome.ToString("C")</p>
    </div>
    <div class="bg-white p-4 rounded shadow">
        <h3 class="text-lg font-semibold text-gray-700 mb-2">Total Pengeluaran</h3>
        <p class="text-red-600 text-xl font-bold">@ViewBag.TotalExpense.ToString("C")</p>
    </div>
    <div class="bg-white p-4 rounded shadow">
        <h3 class="text-lg font-semibold text-gray-700 mb-2">Sisa Saldo</h3>
        <p class="text-blue-700 text-xl font-bold">@ViewBag.Balance.ToString("C")</p>
    </div>
</section>

<section class="mt-8 bg-white p-4 rounded shadow-md">
    <h3 class="text-xl font-semibold text-gray-700 mb-4">Riwayat Transaksi Terakhir</h3>
    <table class="w-full table-auto border-collapse">
        <thead class="bg-blue-600 text-white">
            <tr>
                <th class="px-4 py-2 text-left">Tanggal</th>
                <th class="px-4 py-2 text-left">Kategori</th>
                <th class="px-4 py-2 text-left">Jumlah</th>
                <th class="px-4 py-2 text-left">Keterangan</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="border-t">
                    <td class="px-4 py-2">@item.Date.ToString("dd/MM/yyyy")</td>
                    <td class="px-4 py-2">@item.Category</td>
                    <td class="px-4 py-2 @(item.Type == "Income" ? "text-green-600" : "text-red-600")">
                        @item.Amount.ToString("C")
                    </td>
                    <td class="px-4 py-2">@item.Description</td>
                </tr>
            }
        </tbody>
    </table>
</section>